{
  "name": "asset-view",
  "version": "1.0.0",
  "description": "Asset View",
  "workflow": {
    "_description": "workflow: your workflow configuration",
    "client": {
      "_description": "client: specifically related to the client-side, e.g. the angularjs code",
      "temp": {
        "_description": "temp: where temporary build files should be stored",
        "root": ".temp"
      },
      "src": {
        "_description": "src: roots of your source code",
        "js": {
          "root": "app",
          "outputFileName": "app.js"
        },
        "styles": {
          "root": "styles",
          "outputFileName": "app.css"
        },
        "index": {
          "templateFileUri": "app/index.tmpl"
        }
      },
      "angular": {
        "_description": "Angular configuration, where the mainModule is the root module for your application",
        "mainModule": "av",
        "templates": {
          "_description": "angular.templates: where templates are stored",
          "module": "av.templates"
        }
      },
      "fontLocation": {
        "_description": "You may need to change the font path in CSS files - this does a simple find and replace in, e.g. bootstrap.css",
        "find": "../fonts/",
        "replaceWith": "./"
      },
      "vendor": {
        "src": {
          "_description": "additionalFiles: Include files not already include by main-bower-files",
          "additionalFiles": [],
          "js": {
            "outputFileName": "vendor.js"
          },
          "styles": {
            "outputFileName": "vendor.css"
          }
        },
        "icomoon": {
          "root": "icomoon",
          "replace": {
            "thisValue": "fonts/",
            "withThis": "./"
          },
          "css": "icomoon.css"
        }
      },
      "serve": {
        "port": 5150
      },
      "deploy": {
        "_description": "Arguments can be specified in the command-line, or set here - requires the --deploy argument",
        "hostname": "<TODO>",
        "remotePath": "/var/www",
        "user": "siteadmin"
      },
      "test": {
        "root": "test",
        "karma": {
          "config": "../karma.conf.js"
        }
      }
    }
  },
  "main": "server/server.js",
  "scripts": {
    "test": "gulp --silent --color --watch --test",
    "start": "set NODE_ENV=development && set MONGO_URL_ASSET_VIEW=mongodb://localhost/asset-view && gulp --silent --color --watch --test",
    "start-loud": "set NODE_ENV=development && set MONGO_URL_ASSET_VIEW=mongodb://localhost/asset-view && gulp --color --watch --test"
  },
  "keywords": [
    "testing",
    "angular"
  ],
  "author": "aliengoo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.13.3",
    "clone": "^1.0.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "express-validator": "^2.17.1",
    "lodash": "^3.10.1",
    "mongoose": "^4.0.6",
    "netmask": "^1.0.5",
    "pm2": "^0.14.3",
    "q": "^1.4.1",
    "qs": "^3.1.0",
    "request": "^2.58.0",
    "string": "^3.3.0",
    "string-template": "^0.2.1",
    "valid-url": "^1.0.9",
    "validatejs": "0.0.2",
    "xml2js": "^0.4.9",
    "xmlbuilder": "^2.6.4"
  },
  "devDependencies": {
    "blanket": "^1.1.7",
    "del": "^1.2.0",
    "gulp": "^3.9.0",
    "gulp-add-src": "^0.2.0",
    "gulp-angular-templatecache": "^1.7.0",
    "gulp-autoprefixer": "^2.3.1",
    "gulp-changed": "^1.3.0",
    "gulp-concat": "^2.6.0",
    "gulp-filter": "^2.0.2",
    "gulp-if": "^1.2.5",
    "gulp-jade": "^1.0.1",
    "gulp-less": "^3.0.3",
    "gulp-livereload": "^3.8.0",
    "gulp-load-plugins": "^1.0.0-rc.1",
    "gulp-minify-css": "^1.2.0",
    "gulp-ng-annotate": "^1.0.0",
    "gulp-nodemon": "^2.0.4",
    "gulp-plumber": "^1.0.1",
    "gulp-print": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.3",
    "gulp-ruby-sass": "^1.0.5",
    "gulp-sass": "^2.0.4",
    "gulp-sftp": "^0.1.5",
    "gulp-shell": "^0.4.2",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-template": "^3.0.0",
    "gulp-typescript": "^2.7.8",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.2.4",
    "gulp-webserver": "^0.9.1",
    "ip": "^1.0.1",
    "istanbul": "^0.3.17",
    "jasmine": "^2.3.2",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-growl-reporter": "^0.1.1",
    "karma-jasmine": "^0.3.6",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-requirejs": "^0.2.2",
    "lazypipe": "^1.0.1",
    "main-bower-files": "^2.8.2",
    "mocha": "^2.2.5",
    "mocha-jenkins-reporter": "^0.1.9",
    "node-notifier": "^4.2.3",
    "node-sass": "^3.3.2",
    "nodemon": "^1.3.7",
    "phantomjs": "^1.9.18",
    "requirejs": "^2.1.20",
    "rewire": "^2.3.4",
    "run-sequence": "^1.1.2",
    "scp2": "^0.2.2",
    "tape": "^4.0.1",
    "xunit-file": "0.0.6",
    "yargs": "^3.15.0"
  },
  "config": {
    "blanket": {
      "pattern": [
        "./server/**/*.js"
      ]
    }
  }
}
